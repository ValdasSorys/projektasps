@model IEnumerable<WebApplication6.Models.Tournament>

@{
    ViewBag.Title = "Lobby";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lobby</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TournamentCreator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxPlayerCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isPlaying)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isCaptain)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TournamentCreator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxPlayerCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPlaying)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isCaptain)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
